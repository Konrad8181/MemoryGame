<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="using:MemoryGame.ViewModels"
			 x:DataType="vm:AboutViewModel"
             x:Class="MemoryGame.Views.AboutView">
	
	<Design.DataContext>
		<vm:AboutViewModel/>
	</Design.DataContext>

	<StackPanel>
		<Label HorizontalAlignment="Center" HorizontalContentAlignment="Center"
			   Content="A B O U T" FontSize="54"/>
		<TextBlock Margin="50,20" TextWrapping="Wrap" FontSize="26"
				   Text="The game starts with all the cards face down and player take turns to turn over two cards. If the two cards have the same picture, then player can keep the cards, otherwise he turn the cards face down again. Game ends when all cards are turned over."/>
		<TextBlock Margin="50,30" TextWrapping="Wrap" FontSize="26"
				   Text="In this version 10 pairs of cards are on the play. Overall number of pairs is larger.  Score is the time. Good luck and have fun."/>
	</StackPanel>
</UserControl>
