<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800"
             xmlns:vm="using:MemoryGame.ViewModels"
             x:DataType="vm:AboutViewModel" d:DesignHeight="450"
             x:Class="MemoryGame.Views.AboutView">

  <Design.DataContext>
    <vm:AboutViewModel/>
  </Design.DataContext>
  
  <Grid RowDefinitions="Auto, *">
    <Label Content="A B O U T" FontSize="54" 
           HorizontalAlignment="Center" Margin="0,10"/>
    <TextBlock Grid.Row="1" FontSize="22" TextWrapping="Wrap" Margin="50"
               Text="Memory Game for one person is a mental exercise in which the player must memorize the location of pairs of cards facing down and then flip them over to match them. The objective is to find all matching pairs in as few attempts as possible. This game improves cognitive skills such as concentration, attention, and memory retention."/>
  </Grid>
</UserControl>
