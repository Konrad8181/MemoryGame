<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800"
             xmlns:vm="using:MemoryGame.ViewModels"
             x:DataType="vm:PlayViewModel" d:DesignHeight="450"
             x:Class="MemoryGame.Views.PlayView">


	<Grid RowDefinitions="auto,*">
		<Label HorizontalAlignment="Center" Foreground="Black" FontSize="32" Content="{Binding  CompletedPairsString, Mode=TwoWay}"/>
		<Grid Grid.Row="1" Name="CardsGrid"/>
	</Grid>
</UserControl>
